{
	"name": "yass",
	"version": "1.0.0",
	"description": "Yet Another Sudoku Solver",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"files": [
		"dist"
	],
	"types": "dist/index.d.ts",
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "eslint src/**/*.ts --fix",
		"test": "mocha -r ts-node/register src/**/*.test.ts",
		"dev": "node index.js",
		"build": "rollup -c",
		"watch": "rollup -cw",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/itsrainingmani/yass.git"
	},
	"keywords": [
		"sudoku",
		"ts",
		"lib"
	],
	"author": "Manikandan Sundararajan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/itsrainingmani/yass/issues"
	},
	"homepage": "https://github.com/itsrainingmani/yass#readme",
	"dependencies": {},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.7.4",
		"@typescript-eslint/eslint-plugin": "^2.2.0",
		"@typescript-eslint/parser": "^2.2.0",
		"eslint": "^6.3.0",
		"eslint-config-prettier": "^6.2.0",
		"eslint-plugin-prettier": "^3.1.0",
		"husky": "^3.0.5",
		"lint-staged": "^9.2.5",
		"mocha": "^6.2.0",
		"prettier": "^1.18.2",
		"rollup": "^1.21.4",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-typescript2": "^0.24.2",
		"ts-node": "^8.3.0",
		"typescript": "^3.6.2"
	},
	"husky": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js}": [
			"eslint --fix",
			"git add"
		],
		"*.{js, json, yml, md}": [
			"prettier --write",
			"git add"
		]
	}
}
